<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="事项："
        android:textSize="32dp"
        android:id="@+id/edit_text_view1"
        ></TextView>

    <EditText
        android:id="@+id/edit_edit_text1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/edit_text_view1"></EditText>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="修改"
        android:id="@+id/edit_btd1"
        ></Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_view2"
        android:layout_below="@+id/edit_text_view1"
        android:text="日期:"
        android:textSize="32dp"
        ></TextView>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_edit_text1"
        android:layout_toRightOf="@+id/edit_text_view1"
        android:id="@+id/edit_edit_text2"
        ></EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_view3"
        android:layout_below="@+id/edit_text_view2"
        android:text="已完成:"
        android:textSize="32dp"
        ></TextView>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_edit_text2"
        android:layout_toRightOf="@+id/edit_text_view3"
        android:id="@+id/edit_edit_text3"
        ></EditText>

</RelativeLayout>